{% if relations | length > 0 %}
    {% set relation = random(relations) %}
    <a href="{{ relation.url }}" class="bg-img">
        <i {% if relation.image is defined %}style="background-image: url('{{ relation.image }}');"{% endif %}
           class="bg-img-news-1">
            <b class="bg-img-bgcolor-hover-primary-55"></b>
        </i>
        <div class="col">
            <h5 class="text-hover-primary">{{ relation.title|puriferHtml|raw }}</h5>
            <span class="{{ color }}">{{ blogName }}</span>
        </div>
    </a>
    {% else %}
     <a href="#" class="bg-img">
        <i
           class="bg-img-news-1">
            <b class="bg-img-bgcolor-hover-primary-55"></b>
        </i>
        <div class="col">
            <h5 class="text-hover-primary">Aucune</h5>
            <span class="{{ color }}">{{ blogName }}</span>
        </div>
    </a>
{% endif %}
