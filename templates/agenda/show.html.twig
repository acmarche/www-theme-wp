{% extends "article/base.html.twig" %}

{% block url_back %}
    /tourisme/agenda-des-manifestations/
{% endblock %}

{% block name_back %}
    Retour aux manifestations
{% endblock %}

{% block category %}
    Agenda des manifestations
{% endblock %}

{% block content %}
    {% for description in event.descriptions %}
        {{ description|raw }}<br/>
    {% endfor %}

    {% for tarif in event.tarifs %}
        {{ tarif|raw }}<br/>
    {% endfor %}

    <br/>
    <h4 class="mb-2 mt-2"><strong>Date(s)</strong></h4>

    {% for date in event.dates %}
        {{ date.date_begin|format_date('full') }} {% if loop.last != true %}, {% endif %}
    {% endfor %}

    <h4 class="mb-2 mt-2"><strong>OÃ¹</strong></h4>
    {{ event.adresse1.cp }}
    {{ event.adresse.localiteByLanguage }}
    ({{ event.adresse.communeByLanguage }})<br/>

    <h4 class="mb-2 mt-2"><strong>Renseignements</strong></h4>
    {% if event.tels|length > 1 %}
        {{ dump(event.tels) }}
    {% endif %}

    {% if event.emails|length > 1 %}
        {{ dump(event.emails) }}
    {% endif %}

    {% if event.email is defined %}
        {{ event.email }}<br/>
    {% endif %}
    {% if event.tel is defined %}
        {{ event.tel }}<br/>
    {% endif %}

    {% if event.homepage is defined %}
        <a href="{{ event.homepage }}">{{ event.homepage }}</a><br/>
    {% endif %}

    {% for specInfo in event.specsDetailed %}
        <strong>{{ specInfo.specDefinition.labelByLanguage('fr') }}</strong><br/>
        {{ specInfo.specData.value }}
        <span class="text-muted">
    {{ specInfo.specData.urn }} /
        {% if specInfo.specData.urnCat is defined %}
            cat: {{ specInfo.specData.urnCat }}
        {% endif %}
    </span>
        <br/><br/>
    {% endfor %}


    {% include 'agenda/show/_images.html.twig' %}
    {% include 'map/_carte.html.twig' %}
{% endblock %}

{% block scripts %}

    <script type="text/javascript">
        jQuery( document )
            .ready( function() {
                jQuery( '#content' )
                    .lightGallery( {
                            'selector': '.img-lightGallery'
                        }
                    );
            } );
    </script>

{% endblock %}
